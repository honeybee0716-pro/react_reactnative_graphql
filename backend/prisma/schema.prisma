// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model PrismaInfo {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  prismaIsConnected Boolean @default(true)
}

model Business {
  id                         String     @id @default(auto()) @map("_id") @db.ObjectId
  stripeCustomerID           String     @unique
  firstName                  String
  lastName                   String
  companyName                String?
  email                      String     @unique
  emailIsVerified            Boolean    @default(false)
  password                   String
  createdAt                  DateTime   @default(now())
  updatedAt                  DateTime   @default(now())
  deletedAt                  DateTime?
  bannedAt                   DateTime?
  allowMarketingEmails       Boolean    @default(true)
  createdIPAddress           String
  knownIPAddresses           String[]
  passwordResetCode          Int?
  passwordResetCodeTimestamp DateTime?
  verifyEmailCode            Int?
  verifyEmailCodeTimestamp   DateTime?
  trialCreatedAt             DateTime?
  companyLogo                String     @default("")
  role                       Role       @default(BASIC)
  Customer                   Customer[]
  Product                    Product[]
}

model Customer {
  id                         String    @id @default(auto()) @map("_id") @db.ObjectId
  stripeCustomerID           String    @unique
  firstName                  String
  lastName                   String
  companyName                String?
  email                      String    @unique
  emailIsVerified            Boolean   @default(false)
  password                   String
  createdAt                  DateTime  @default(now())
  updatedAt                  DateTime  @default(now())
  deletedAt                  DateTime?
  bannedAt                   DateTime?
  allowMarketingEmails       Boolean   @default(true)
  createdIPAddress           String
  knownIPAddresses           String[]
  passwordResetCode          Int?
  passwordResetCodeTimestamp DateTime?
  verifyEmailCode            Int?
  verifyEmailCodeTimestamp   DateTime?
  trialCreatedAt             DateTime?
  role                       Role      @default(BASIC)
  business                   Business? @relation(fields: [businessId], references: [id])
  businessId                 String?
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  price       Float
  description String
  img         String
  isDeleted   Boolean  @default(false)
  businessId  String
  business    Business @relation(fields: [businessId], references: [id])
}

enum Role {
  BASIC
  ADMIN
}

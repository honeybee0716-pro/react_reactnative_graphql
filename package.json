{
  "name": "saas-starter",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/JoeyFenny/saas-starter.git",
  "author": "Joey Fenny <16143306+JoeyFenny@users.noreply.github.com>",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "jscpd": "^3.4.5",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2"
  },
  "scripts": {
    "postinstall": "husky install",
    "prepare": "husky install",
    "precommit": "yarn lint-staged && yarn jscpd && yarn jest --passWithNoTests",
    "test": "jest",
    "build": "cd backend && yarn tsc",
    "tsc": "tsc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit --bailOnLintError true"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "prettier --write"
    ],
    "*.{md,css}": [
      "prettier --write"
    ]
  }
}
